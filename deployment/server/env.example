# TCGV Game Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=production

# Game Configuration
MAX_PLAYERS_PER_ROOM=10
MAX_MONSTERS_PER_ROOM=5
MAX_SWORDS_PER_ROOM=1
MAX_GUNS_PER_ROOM=1

# Admin Users (comma-separated)
ADMIN_USERS=admin,your-username

# Optional: Database Configuration (if you add persistence later)
# DB_HOST=localhost
# DB_USER=your_db_user
# DB_PASS=your_db_password
# DB_NAME=tcgv_game

# Optional: Redis Configuration (for scaling)
# REDIS_URL=redis://localhost:6379 